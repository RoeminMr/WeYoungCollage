@keyframes kf-marque-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-33.3%);
  }
}
.marquee {
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #89cff0;
  color: rgba(0, 0, 0, 0.74);
  border: none;
  display: block;
  margin: 0 auto;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
  position: relative;
  font-size: 28rpx;
}
.marquee .content {
  display: inline-block;
  position: relative;
  padding-right: 0px;
  /* 跑马灯设置 */
  animation: kf-marque-animation 30s linear infinite;
  white-space: nowrap;
}

